{
  "name": "Hugo Development Environment",
  "image": "mcr.microsoft.com/devcontainers/base:noble",
  "features": {
    "ghcr.io/devcontainers/features/hugo:1": {
      "extended": true,
      "version": "0.148.2"
    },
    "ghcr.io/prplecake/devcontainer-features/dart-sass:1": {
      "version": "1.89.2"
    }
  },
  "forwardPorts": [
    1313
  ],
  "portsAttributes": {
    "1313": {
      "label": "Hugo Development Server",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "git config --global --add safe.directory ${containerWorkspaceFolder} && hugo server -D",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
